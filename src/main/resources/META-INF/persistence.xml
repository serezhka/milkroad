<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="MilkroadPersistenceUnit">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.tsystems.javaschool.milkroad.model.AddressEntity</class>
        <!--<class>com.tsystems.javaschool.milkroad.model.CityEntity</class>-->
        <!--<class>com.tsystems.javaschool.milkroad.model.CountryEntity</class>-->
        <class>com.tsystems.javaschool.milkroad.model.OrderEntity</class>
        <class>com.tsystems.javaschool.milkroad.model.OrderDetailEntity</class>
        <class>com.tsystems.javaschool.milkroad.model.ProductEntity</class>
        <class>com.tsystems.javaschool.milkroad.model.ProductAttributeEntity</class>
        <class>com.tsystems.javaschool.milkroad.model.ProductCategoryEntity</class>
        <class>com.tsystems.javaschool.milkroad.model.ProductParameterEntity</class>
        <class>com.tsystems.javaschool.milkroad.model.UserEntity</class>
        <properties>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/milkroad"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
            <property name="hibernate.connection.username" value="admin"/>
            <property name="hibernate.connection.password" value="11111111"/>
            <property name="hibernate.archive.autodetection" value="class"/>
            <property name="hibernate.autocommit" value="false"/>
            <!--<property name="hibernate.show_sql" value="true"/>-->
            <!--<property name="hibernate.format_sql" value="true"/>-->
            <!--<property name="hbm2ddl.auto" value="update"/>-->
        </properties>
    </persistence-unit>
</persistence>
